@model Storage.ViewModels.SearchViewModel
@{
    ViewBag.Title = "Filter Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Filter Category</h1>



<form asp-controller="Products" asp-action="FilterCategory">

    <select asp-for="CategoryId"
            asp-items="@(Model.Category);">
        <option>Please select one</option>

    </select>

    <input type="submit" value="SUBMIT" />




</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Orderdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Shelf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Description)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Orderdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shelf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

            </tr>
        }
    </tbody>
</table>





